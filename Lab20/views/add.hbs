<div class="layout__records records">
    {{#each records}}
        {{>record}}
    {{/each}}
</div>
<div class="layout__form">
    <form action="/add" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
            <label for="fullName" class="form-label">Full name</label>
            <input type="text" required pattern="^[A-Z]{1}[a-z]{2,24}\s{1}[A-Z]{1}[a-z]{2,24}$"
                   class="form-control" name="fullName" id="fullName">
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone number</label>
            <input type="text" required pattern="^\+375[29|33|44][0-9]{3}[0-9]{3}[0-9]{2}$"
                   class="form-control" name="phoneNumber" id="phoneNumber">
        </div>

        <div class="layout__actions">
            <button type="submit" class="layout__btn btn btn-outline-primary">Добавить</button>
            <button type="button" class="layout__btn btn btn-outline-primary" {{#abandon}}{{/abandon}}>Отказаться</button>
        </div>
    </form>
</div>