<div class="layout__records records">
    {{#each records}}
        {{>record}}
    {{/each}}
</div>
<div class="layout__form">
    <form action="http://localhost:3000/update" method="post" enctype="application/x-www-form-urlencoded">
        {{#with record}}
            <input style="display: none" type="text" class="form-control" name="id" id="id" value="{{id}}">

            <div class="mb-3">
                <label for="fullName" class="form-label">Full name</label>
                <input type="text" class="form-control" name="fullName" id="fullName" value="{{fullName}}">
            </div>
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Phone number</label>
                <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" value="{{phoneNumber}}">
            </div>
        {{/with}}

        <div class="layout__actions">
            <button type="submit" class="layout__btn btn btn-outline-primary">Изменить</button>
            <button type="button" class="layout__btn btn btn-outline-primary" id="action-delete" data-id="{{record.id}}">Удалить</button>
            <button type="button" class="layout__btn btn btn-outline-primary" {{#abandon}}{{/abandon}}>Отказаться</button>
        </div>
    </form>
</div>